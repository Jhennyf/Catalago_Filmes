<div class="bg-gray-900 text-white min-h-screen pt-24 pb-12">
  <div class="max-w-lg mx-auto p-6 bg-gray-800 rounded-lg shadow-lg">

    <h1 class="text-2xl font-bold mb-4 text-center">Adicionar Novo Filme</h1>

    <%= simple_form_for @movie, html: { class: "space-y-4" } do |f| %>

      <%= f.input :title,
            label: "Título",
            placeholder: "Ex: O Poderoso Chefão",
            input_html: { class: "w-full bg-gray-700 border-gray-600 rounded p-2 text-white" },
            label_html: { class: "text-sm font-medium text-gray-300" } %>

      <%= f.input :synopsis,
            as: :text,
            label: "Sinopse",
            placeholder: "Descreva o filme...",
            input_html: { rows: 3, class: "w-full bg-gray-700 border-gray-600 rounded p-2 text-white" },
            label_html: { class: "text-sm font-medium text-gray-300" } %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <%= f.input :realease_year,
              label: "Ano de Lançamento",
              placeholder: "Ex: 1972",
              input_html: { class: "w-full bg-gray-700 border-gray-600 rounded p-2 text-white" },
              label_html: { class: "text-sm font-medium text-gray-300" } %>

        <%= f.input :duration,
              label: "Duração (em minutos)",
              placeholder: "Ex: 175",
              input_html: { class: "w-full bg-gray-700 border-gray-600 rounded p-2 text-white" },
              label_html: { class: "text-sm font-medium text-gray-300" } %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <%= f.input :director,
              label: "Diretor",
              placeholder: "Ex: Francis Ford Coppola",
              input_html: { class: "w-full bg-gray-700 border-gray-600 rounded p-2 text-white" },
              label_html: { class: "text-sm font-medium text-gray-300" } %>

        <%= f.input :image_url,
              label: "URL da Imagem de Capa",
              placeholder: "https://.../imagem.jpg",
              input_html: { class: "w-full bg-gray-700 border-gray-600 rounded p-2 text-white" },
              label_html: { class: "text-sm font-medium text-gray-300" } %>
      </div>

      <%= turbo_frame_tag "new_category" do %>
        <%= simple_form_for Category.new, url: categories_path, method: :post, html: { class: "flex gap-2 mb-8 mt-5" } do |cf| %>
          <%= cf.input :name, label: false, placeholder: "Nova categoria...", input_html: { class: "bg-gray-700 border-gray-600 text-white rounded px-2 py-1" } %>
          <%= cf.button :submit, "Adicionar", class: "bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded mt-5" %>
        <% end %>
      <% end %>

      <%= f.association :categories,
            as: :check_boxes,
            label: "Gêneros",
            label_html: { class: "text-sm font-medium text-gray-300" },
            wrapper_html: { class: "grid grid-cols-2 md:grid-cols-3 gap-x-4 gap-y-2 pt-2" },
            item_wrapper_class: "flex items-center gap-2",
            input_html: { class: "bg-gray-700 border-gray-600 text-blue-500" } %>

      <div class="text-center pt-4">
        <%= f.button :submit, "Salvar Filme", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition" %>
      </div>

    <% end %>
  </div>
</div>