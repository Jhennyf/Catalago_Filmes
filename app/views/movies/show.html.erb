<div class="bg-black text-white min-h-screen">
  
  <div class="relative h-[600px] bg-cover bg-center" style="background-image: url('<%= @movie.image_url %>');">
    <div class="absolute inset-0 bg-gradient-to-r from-black/80 via-black/50 to-transparent"></div>
    <div class="relative z-10 max-w-7xl mx-auto p-6 h-full flex flex-col justify-center">
      <div class="max-w-md">
        <h1 class="text-5xl font-bold text-white"><%= @movie.title %></h1>
        <p class="text-lg text-gray-200 mt-4"><%= @movie.synopsis %></p>
        <a href="#" class="mt-6 inline-block bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-6 rounded-md transition">ASSISTIR</a>
      </div>
    </div>
  </div>

  <div class="bg-red-600 text-white">
    <div class="max-w-4xl mx-auto p-4 flex justify-around items-center text-lg font-semibold">
      <div><span><%= @movie.director %></span></div>
      <div><span><%= @movie.duration / 60 %>h <%= (@movie.duration % 60).to_s.rjust(2, '0') %>min</span></div>
      <div><span><%= @movie.realease_year %></span></div>
    </div>
  </div>

  <div class="max-w-4xl mx-auto p-6 mt-10">
    
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-3xl font-bold">Avaliações do Filme</h2>
      

      <%= link_to new_movie_comment_path(@movie), 
            data: { turbo_frame: "modal" }, 
            class: "flex items-center gap-2 border border-white hover:bg-white hover:text-black text-white font-semibold py-2 px-4 rounded-md transition text-sm" do %>
        <span class="bg-red-600 rounded-full p-0.5">
          <%= heroicon("plus", variant: :solid, options: { class: "w-4 h-4 text-white" }) %>
        </span>
        Adicionar Comentário
      <% end %>
    </div>

    
    <%= render "movies/comments_list", movie: @movie %>
    
  </div>
</div>

<%= turbo_frame_tag "modal" %>