<div class="bg-black text-white min-h-screen pt-20 pb-12">
  <div class="max-w-4xl mx-auto p-6">

    <div class="flex items-center gap-6 border-b-2 border-red-600 pb-4 mb-6">
      
      <div class="w-24 h-24 bg-gray-700 rounded-full flex items-center justify-center flex-shrink-0">
        <%= heroicon("user", variant: :outline, options: { class: "w-14 h-14 text-white" }) %>
      </div>
      
      <div>
        <span class="text-lg text-gray-300">usuário</span>
        <h2 class="text-4xl font-bold text-white"><%= current_user.name %></h2>
        <div class="flex items-center gap-2 text-gray-400 mt-1">
          <%= heroicon("cog-6-tooth", variant: :solid, options: { class: "w-5 h-5" }) %>
          <span class="text-sm font-medium tracking-widest">CONFIGURAÇÕES</span>
        </div>
      </div>
    </div>
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-4xl font-bold">Editar Perfil</h1>
      
      <%= link_to new_movie_path, class: "flex items-center gap-2 border border-white hover:bg-white hover:text-black text-white font-semibold py-2 px-4 rounded-md transition text-sm" do %>
        <span class="bg-red-600 rounded-full p-0.5">
          <%= heroicon("plus", variant: :solid, options: { class: "w-4 h-4 text-white" }) %>
        </span>
        Adicionar Novo Filme
      <% end %>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
      <%= f.error_notification %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-6">

        <div class="space-y-6">
          <%= f.input :name,
                label: "Nome:",
                required: false,
                input_html: { class: "w-full bg-gray-800 border-gray-700 rounded p-3 text-white" },
                label_html: { class: "text-sm font-medium text-gray-300" } %>

          <%= f.input :password,
                label: "Senha:",
                hint: "Deixe em branco se não quiser mudar",
                required: false,
                input_html: { autocomplete: "new-password", class: "w-full bg-gray-800 border-gray-700 rounded p-3 text-white" },
                label_html: { class: "text-sm font-medium text-gray-300" },
                hint_html: { class: "text-gray-400 text-xs mt-1" } %>
        </div>

        <div class="space-y-6">
          <%= f.input :email,
                label: "E-mail:",
                required: true,
                input_html: { class: "w-full bg-gray-800 border-gray-700 rounded p-3 text-white" },
                label_html: { class: "text-sm font-medium text-gray-300" } %>

          <%= f.input :password_confirmation,
                label: "Confirmar Senha:",
                required: false,
                input_html: { autocomplete: "new-password", class: "w-full bg-gray-800 border-gray-700 rounded p-3 text-white" },
                label_html: { class: "text-sm font-medium text-gray-300" } %>
        </div>
      </div>

      <div class="border-t border-gray-700 pt-6">
        <div class="max-w-md"> 
          <%= f.input :current_password,
                label: "Senha Atual:",
                hint: "Precisamos da sua senha atual para confirmar as mudanças",
                required: true,
                input_html: { autocomplete: "current-password", class: "w-full bg-gray-800 border-gray-700 rounded p-3 text-white" },
                label_html: { class: "text-sm font-medium text-gray-300" },
                hint_html: { class: "text-gray-400 text-xs mt-1" } %>
        </div>
      </div>

      <div class="flex items-center gap-4">
        <%= f.button :submit, "Salvar", class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-6 rounded-md transition" %>

        <%= button_to "Excluir Conta", registration_path(resource_name),
              data: { confirm: "Tem certeza?", turbo_confirm: "Tem certeza?" },
              method: :delete,
              class: "border border-red-600 text-red-600 hover:bg-red-900 hover:text-white font-bold py-2 px-6 rounded-md transition" %>
      </div>

    <% end %>
    <div class="mt-6">
      <%= link_to "Voltar", movies_path, class: "text-gray-400 hover:text-white" %>
    </div>

  </div>
</div>