<div class="flex items-center justify-center min-h-screen px-4">

  <div class="max-w-md w-full bg-black bg-opacity-70 rounded-lg shadow-2xl p-8 backdrop-blur-sm border border-gray-700">

    <h2 class="text-4xl font-bold text-center text-white">Esqueceu sua senha?</h2>
    <p class="text-center text-gray-300 mb-8">Nós te enviaremos um link para resetar</p>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs space-y-4">
        
        <%= f.input :email,
                    label: "Seu Email:",
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "w-full bg-gray-800 text-white border border-red-600 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500" },
                    label_html: { class: "text-gray-200" } %>

      </div>

      <div class="form-actions mt-8">
        <%= f.button :submit, "Me envie as instruções", class: "w-full bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-4 rounded-md text-lg transition duration-200" %>
      </div>
    <% end %>

    <div class="mt-6 text-center space-y-2">
      <div>
        <%= link_to "Lembrou? Faça login", new_session_path(resource_name), class: "text-gray-300 hover:text-white hover:underline" %>
      </div>
      <div>
        <%= link_to "Não tem conta? Cadastre-se", new_registration_path(resource_name), class: "text-gray-400 hover:text-white hover:underline" %>
      </div>
    </div>

  </div>
</div>