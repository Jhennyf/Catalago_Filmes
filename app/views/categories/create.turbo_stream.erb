<turbo-stream action="replace" target="new_category">
    <template>
        <%= turbo_frame_tag "new_category" do %>
        <%= simple_form_for Category.new, url: categories_path, method: :post, html: { class: "flex gap-2 mb-2" } do |cf| %>
        <%= cf.input :name, label: false, placeholder: "Nova categoria...", input_html: { class: "bg-gray-700 border-gray-600 text-white rounded px-2 py-1" } %>
        <%= cf.button :submit, "Adicionar", class: "bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded" %>
        <% end %>
        <div class="text-green-400 text-sm mt-1">Categoria criada!</div>
        <% end %>
    </template>
</turbo-stream>